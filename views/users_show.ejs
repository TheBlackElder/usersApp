<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
      integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
      crossorigin="anonymous"
    />
    <title>USAS</title>
  </head>

  <body>
    <%- include('partials/_header') %>
  
    <div class="card text-center">
      <div class="card-header"></div>
      <div class="card-body">
        <h5 class="card-title">
          
          <div class="card mb-3 mx-auto " style="max-width: 540px;">
            <div class="row g-0">
              <div class="col-md-4">
                <img src="../images/Jason_pic.jpeg" class="img-fluid rounded-start" alt="Image" width="128" height="128">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%= user.firstName %>
                    <%= user.lastName %></h5>
                    <p class="card-text"><small class="text-body-secondary"><%= user.dateOfBirth %></small></p>
                  <p class="card-text"> <%= user.bio %></p>
                </div>
              </div>
            </div>
          </div>
        </h5>
      </div>
   
      <form method="POST" action="/users/<%= user.id %>/update" class="mx-auto">
        <input type="hidden" name="id" value="<%= user.id %>">
        <div class="form-group mb-2">
          <label for="firstName">First Name</label>
          <input
            class="form-control"
            type="text"
            name="firstName"
            style="width: 300px; margin: 1em"
            value="  <%= user.firstName %>"
          />
          <label for="lastName">Last Name</label>
          <input
            class="form-control"
            type="text"
            name="lastName"
            style="width: 300px; margin: 1em"
            value="  <%= user.lastName %>"
          />
          <label for="DOB">Date of Birth</label>
          <input
            class="form-control"
            type="date"
            name="birthday"
            style="width: 300px; margin: 1em"
            value=" <%= user.dateOfBirth %>"
          />
          <label for="profilePic">Profile Picture</label>
          <input
            class="form-control"
            type="url"
            name="profilePic"
            style="width: 300px; margin: 1em"
            value="   <%= user.profilePic %>"
          />
          <div class="mb-3">
            <label for="formFileSm" class="form-label">Upload Profile Picture</label>
            <input class="form-control form-control-sm" id="formFileSm" type="file">
          </div>
          <label for="bio" class="form-label">Biography</label>
          <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" value="  <%= user.bio %>"> <%= user.bio %></textarea>
 
          <button type="submit" class="btn btn-primary" >Update</button>
        </div>  
      </form>
      
      <div class="card-footer text-muted">
 
       
    </div>
    <!-- Bootstrap JS -->
    <script
      src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
      integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
      integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
